.profile(ng-controller="profileCtrl")
	form(name="profileForm")
		h2 User Profile
		.form-group
			label.control-label(for="username") User Name
			input.form-control(name="username", type="text", placeholder="User Name", ng-model="username", required)
		.form-group
			label.control-label(for="email") Email
			input.form-control(name="email", type="email", placeholder="Email", ng-model="email", required)
		.form-group
			label.control-label(for="password") Password
			input.form-control(name="password", type="password", placeholder="Password", ng-model="password")

		.form-group
			button(ng-click="update()", ng-disabled="signupForm.$invalid") Submit
			a(href="/") Cancel